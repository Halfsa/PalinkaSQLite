<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdatrogzitesActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Főző"
        android:textSize="25sp"
        android:id="@+id/editTextFozoRogzit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gyümölcs"
        android:textSize="25sp"
        android:id="@+id/editTextGyumolcsRogzit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alkohol tartalom (%)"
        android:textSize="25sp"
        android:id="@+id/editTextAlkoholRogzit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rögzít"
        android:id="@+id/buttonRogzit"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vissza"
        android:id="@+id/buttonRogzitVissza"
        android:textSize="25sp" />


</LinearLayout>